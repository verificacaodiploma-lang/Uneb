  <script>
    function buscarDiploma(event) {
      event.preventDefault();
      const codigo = document.getElementById("codigo").value.trim();
      if (codigo === "63466-75") {
        window.location.href = "63466-75.html";
      } else {
        document.getElementById("erro").style.display = "block";
      }
    }
  </script>
